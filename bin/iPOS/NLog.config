<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile=".\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logDirectory" value="${basedir}/logs"/>
  <variable name="Date" value="${shortdate}"/>

  <targets>
    <target name="logFileFull" xsi:type="File" encoding="utf-8"
            fileName="${logDirectory}/${shortdate}_ipos_full.log" layout="${longdate}|${threadid}|${level}|${callsite}| ${message}"/>
    <target name="logFileError" xsi:type="File" encoding="utf-8"
            fileName="${logDirectory}/${shortdate}_ipos_error.log" layout="${longdate}|${threadid}|${level}|${callsite}| ${message} ${exception:ToString}"/>
    <target name="logconsole" xsi:type="Console" layout="${longdate}|${threadid}|[${level}] ${message} "/>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logconsole" />
    <logger name="*" minlevel="Debug" writeTo="logFileFull" />
    <logger name="*" minlevel="Error" writeTo="logFileError" />
  </rules>
  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
</nlog>
